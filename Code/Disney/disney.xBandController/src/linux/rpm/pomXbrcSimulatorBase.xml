<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>xbrc-simulator</artifactId>
	<packaging>rpm</packaging>
	<parent>
		<groupId>com.disney.xband</groupId>
		<artifactId>xBandParent</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<description>
		Disney/Synapse xBRC simulator generating guest traffic using simulated readers and guests.
	</description>
	<organization>
		<name>Walt Disney Corporation></name>
		<url>www.disney.com</url>
	</organization>
	<dependencies>
		<dependency>
			<groupId>com.disney.xband</groupId>
			<artifactId>Reader</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>executable</type>
		</dependency>
		<dependency>
			<groupId>com.disney.xband</groupId>
			<artifactId>Guest</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>executable</type>
		</dependency>
	</dependencies>
 	<build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>2.1-alpha-2</version>
				<extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>rpm</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <copyright>2012, Walt DisneyCorporation</copyright>
                    <distribution>Proprietary</distribution>
                    <group>Applications/System</group>
					<version>${XBAND_BUILD_SHORT_VERSION}</version>
					<release>${XBAND_BUILD_RELEASE}</release>
					<needarch>i386</needarch>
					<provides>
						<provide>xbrc-simulator</provide>
					</provides>
                    <mappings>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator/Reader</directory>
                            <filemode>770</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${settings.localRepository}/com/disney/xband/Reader/1.0-SNAPSHOT/Reader-1.0-SNAPSHOT.executable
									</location>
									<destination>Reader</destination>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator/Reader</directory>
                            <filemode>770</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Reader/startreaders.sh
									</location>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator/Reader</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Reader/NGEConfig.xml
									</location>
								</source>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Reader/SpaceModelConfig.xml
									</location>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator/Guest</directory>
                            <filemode>770</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${settings.localRepository}/com/disney/xband/Guest/1.0-SNAPSHOT/Guest-1.0-SNAPSHOT.executable
									</location>
									<destination>Guest</destination>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator/Guest</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Guest/NGEConfig.xml
									</location>
								</source>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Guest/SimulatedGuests.csv
									</location>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator</directory>
                            <filemode>774</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Guest/startsim.sh
									</location>
								</source>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Guest/stopsim.sh
									</location>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Guest/startsim.sql
									</location>
								</source>
							</sources>
                        </mapping>
                        <mapping>
                            <directory>/usr/share/xbrc/simulator/Database</directory>
                            <filemode>644</filemode>
                            <username>root</username>
                            <groupname>root</groupname>
							<sources>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Database/attraction/dev/initdb.sql
									</location>
									<destination>attraction.sql</destination>
								</source>
								<source>
									<location>
										${xbandhome-1.7}/src/linux/Database/space/dev/initdb.sql
									</location>
									<destination>space.sql</destination>
								</source>
							</sources>
                        </mapping>
                    </mappings>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
