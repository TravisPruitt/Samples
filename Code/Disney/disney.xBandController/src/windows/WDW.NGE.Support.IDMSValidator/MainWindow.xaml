<Window x:Class="WDW.NGE.Support.IDMSValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:WDW.NGE.Support.IDMSValidator.Views"
        Title="IDMS Validator" Height="720" Width="1024"
        DataContext="{Binding Source={StaticResource Locator}, Path=[MainPageViewModel]}">
    <Grid>
        <TabControl>
            <TabItem Header="Guest" >
                <my:GuestCompareView HorizontalAlignment="Left" VerticalAlignment="Top"  />
            </TabItem>
            <TabItem Header="Bulk">
                <my:BulkCompareView HorizontalAlignment="Left" VerticalAlignment="Top"  />
            </TabItem>
            <TabItem Header="Band">
                <my:CreateBandsView HorizontalAlignment="Left" VerticalAlignment="Top"  />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
